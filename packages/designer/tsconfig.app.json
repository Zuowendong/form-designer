{
	"extends": "@vue/tsconfig/tsconfig.web.json",
	"compilerOptions": {
		"composite": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["unplugin-vue-define-options"],
		"outDir": "./"
	},
	"include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.d.ts"],
	"exclude": ["src/**/__tests__/*", "node_modules", "dist"]
}
